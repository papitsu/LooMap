<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar">

    <SwitchPreference
        android:id="@+id/filter_category"
        app:key="category_filter"
        app:summary="Public, Private"
        app:title="Filter by category" />

    <SwitchPreference
        android:id="@+id/filter_rating"
        app:key="rating_filter"
        app:summary="Minimum 3.7 stars"
        app:title="Filter by rating" />

    <SwitchPreference
        android:id="@+id/filter_distance"
        app:key="distance_filter"
        app:summary="10 km"
        app:title="Filter by distance" />

</PreferenceScreen>